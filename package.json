{
  "name": "happo-stat",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "batch:run:dev": "ts-node --project ./batch/tsconfig.json ./batch/index.ts",
    "db:setup": "docker volume create happo31-stat-mysql-volume",
    "db:start": "docker run --rm --name happo31-stat-mysql-server --volume happo31-stat-mysql-volume:/var/lib/mysql -p 3306:3306 --env-file=./.env -d mysql:latest",
    "db:connect": "mysql -h 127.0.0.1 -u local -p",
    "db:stop": "docker stop happo31-stat-mysql-server",
    "db:clean": "docker volume rm -f happo31-stat-mysql-volume",
    "prisma:generate": "prisma generate deploy",
    "prisma:migrate": "prisma migrate dev --preview-feature --name",
    "prisma:deploy": "yarn prisma migrate deploy --preview-feature",
    "heroku-postbuild": "yarn build && yarn prisma:deploy"
  },
  "dependencies": {
    "@prisma/client": "3.3.0",
    "chart.js": "^3.6.0",
    "dotenv": "^10.0.0",
    "isomorphic-fetch": "^3.0.0",
    "nature-remo": "^1.3.0",
    "next": "12.0.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "recoil": "^0.4.1",
    "styled-jsx": "^4.0.1"
  },
  "devDependencies": {
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/node": "16.11.6",
    "@types/react": "17.0.33",
    "eslint": "7",
    "eslint-config-next": "12.0.1",
    "prisma": "3.3.0",
    "ts-node": "^10.4.0",
    "typescript": "4.4.4"
  }
}
